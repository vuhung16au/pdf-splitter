{
  "name": "pdf-splitter",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "test": "./run-tests.sh",
    "test:all": "./run-tests.sh all",
    "test:e2e": "./run-tests.sh e2e",
    "test:component": "./run-tests.sh component",
    "test:chrome": "./run-tests.sh e2e chrome",
    "test:firefox": "./run-tests.sh e2e firefox",
    "test:safari": "./run-tests.sh e2e safari",
    "test:edge": "./run-tests.sh e2e edge",
    "test:compat:chrome": "npx cypress run --browser chrome --spec 'cypress/e2e/browser-compatibility.cy.ts'",
    "test:compat:edge": "npx cypress run --browser edge --spec 'cypress/e2e/browser-compatibility.cy.ts'",
    "test:browsers": "npm run test:compat:chrome && npm run test:compat:edge",
    "test:a11y": "start-server-and-test dev http://localhost:3000 'cypress run --spec cypress/e2e/accessibility.cy.ts'",
    "test:a11y:open": "start-server-and-test dev http://localhost:3000 'cypress open --e2e --browser chrome --spec cypress/e2e/accessibility.cy.ts'",
    "test:a11y:chrome": "start-server-and-test dev http://localhost:3000 'cypress run --browser chrome --spec cypress/e2e/accessibility.cy.ts'",
    "test:a11y:firefox": "start-server-and-test dev http://localhost:3000 'cypress run --browser firefox --spec cypress/e2e/accessibility.cy.ts'",
    "test:a11y:edge": "start-server-and-test dev http://localhost:3000 'cypress run --browser edge --spec cypress/e2e/accessibility.cy.ts'",
    "test:a11y:all": "./run-a11y-cross-browser.sh"
  },
  "dependencies": {
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "next": "15.3.2",
    "pdf-lib": "^1.17.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@cypress/webpack-dev-server": "^4.1.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/cypress": "^10.0.3",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sinon": "^17.0.4",
    "axe-core": "^4.10.3",
    "cypress": "^14.3.3",
    "cypress-axe": "^1.6.0",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
