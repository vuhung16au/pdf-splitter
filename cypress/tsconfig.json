{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "types": ["cypress", "node", "cypress-axe"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": false
  },
  "include": ["**/*.ts", "**/*.tsx"]
}